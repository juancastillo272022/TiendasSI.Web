@model TiendasSI.Web.Models.Production

@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.Title)</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Producer)</h4>
    <hr />
    <dl class="row">
        
        
        <dt class = "col-sm-2">
            <a>Fecha de lanzamiento</a>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
        
        <dt class = "col-sm-2">
            <a>Tipo de producción</a>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>

        <dt class = "col-sm-2">
            <a>Valor</a>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Value)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Edit", new { id = Model.IdProduction }) |
    <a asp-action="Index">Back to List</a>
</div>
